@using ApiFrontEnd.Controllers
@using Microsoft.AspNetCore.Http

<ul class="navbar-nav">
    @if (Context.Request.Cookies.ContainsKey("token"))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello @Context.Request.Cookies["user"]!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline"  asp-page="/Account/Logout" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-page="/Account/Login">Login</a>
        </li>
    }


</ul>
