@page
@model ApiFrontEnd.Pages.Account.Manage.IndexModel
@{

}

<h4 class="toast-header">My personal page:</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" class="container">
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Login"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rating"></label>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @Model.Input.Rating%" aria-valuenow="@Model.Input.Rating" aria-valuemin="0" aria-valuemax="100">@Model.Input.Rating</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Input.Position"></label>
                <input asp-for="Input.Position" class="form-control" />
                <span asp-validation-for="Input.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Experience"></label>
                <input type="number" step="0.5" asp-for="Input.Experience" class="form-control" />
                <span asp-validation-for="Input.Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bio"></label>
                <textarea asp-for="Input.Bio" class="form-control"  style="resize: none; height: 240px"></textarea>
                <span asp-validation-for="Input.Bio" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="col-lg-2 offset-lg-5">
        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>

    </div>   
</div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}